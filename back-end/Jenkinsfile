pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = 'nolawit/project-backend'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-user/your-laravel-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('.') {
                    sh 'docker build -t $DOCKER_HUB_REPO:$DOCKER_TAG -f back-end/Dockerfile back-end'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                    sh 'docker push $DOCKER_HUB_REPO:$DOCKER_TAG'
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                dir('back-end') {
                    sh 'docker-compose down || true'
                    sh 'docker-compose up -d'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build, push, and local deployment successful!'
        }
        failure {
            echo '❌ Something failed during the pipeline. Check logs.'
        }
    }
}
