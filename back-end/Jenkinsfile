
pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'nolawit/project-backend:latest'
        DOCKER_HUB_CREDENTIALS = 'dockerhub-credentials' // Your Jenkins Docker Hub credentials ID
        CONTAINER_NAME = 'backend-app'             // Name of the container to run locally
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/nolawit-fant/fullstack-CI-CD.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}", ".")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(
                            credentialsId: "${DOCKER_HUB_CREDENTIALS}",
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )
                    ]) {
                        sh "docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}"
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                script {
                    // Stop and remove existing container if it exists
                    sh """
                    if [ \$(docker ps -q -f name=${CONTAINER_NAME}) ]; then
                      docker stop ${CONTAINER_NAME}
                    fi
                    if [ \$(docker ps -aq -f name=${CONTAINER_NAME}) ]; then
                      docker rm ${CONTAINER_NAME}
                    fi
                    """

                    // Pull the latest image and run container
                    sh """
                    docker pull ${DOCKER_IMAGE}
                    docker run -d --name ${CONTAINER_NAME} -p 8000:8000 ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Docker image built, pushed, and deployed locally!'
        }
        failure {
            echo '❌ Something failed during the pipeline. Check logs.'
        }
    }
}
