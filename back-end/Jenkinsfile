pipeline {
    agent any

    environment {
        BACKEND_DIR = "back-end"
        COMPOSE_PROJECT_NAME = "backend_ci"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/nolawit-fant/fullstack-CI-CD.git'
            }
        }

        stage('Start Services with Docker Compose') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh 'docker-compose -p ${COMPOSE_PROJECT_NAME} down || true'
                    sh 'docker-compose -p ${COMPOSE_PROJECT_NAME} up -d --build'
                }
            }
        }

        stage('Wait for MySQL to be Ready') {
            steps {
                script {
                    echo "Waiting for MySQL to be ready..."
                    sh '''
                        for i in {1..30}; do
                            docker exec ${COMPOSE_PROJECT_NAME}_app_1 bash -c 'mysqladmin ping -h db --silent'
                            if [ $? -eq 0 ]; then
                                echo "MySQL is up!"
                                break
                            fi
                            echo "Waiting... ($i)"
                            sleep 2
                        done
                    '''
                }
            }
        }

        stage('Run Laravel Setup') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh '''
                        docker exec ${COMPOSE_PROJECT_NAME}_app_1 cp .env.example .env || true
                        docker exec ${COMPOSE_PROJECT_NAME}_app_1 php artisan key:generate
                        docker exec ${COMPOSE_PROJECT_NAME}_app_1 php artisan migrate --force
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh 'docker exec ${COMPOSE_PROJECT_NAME}_app_1 ./vendor/bin/phpunit'
                }
            }
        }
    }

    post {
        always {
            dir("${BACKEND_DIR}") {
                sh 'docker-compose -p ${COMPOSE_PROJECT_NAME} down'
            }
        }
    }
}
